<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpDosen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarStaf"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#F9F6E0">

            <ImageView
                android:id="@+id/imgBack1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="100dp"
                android:paddingTop="5dp"
                android:text="Register"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textSize="20sp" />
        </androidx.appcompat.widget.Toolbar>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="10dp"
            app:cardElevation="10dp"
            app:layout_constraintTop_toTopOf="parent"
            android:backgroundTint="@color/white">

            <TextView
                android:id="@+id/nameDsn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:fontFamily="@font/baloo2_semibold"
                android:text="Nama Dosen"
                android:layout_marginTop="10dp"

                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/baloo2_semibold"
                android:text="Nama Dosen"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edt_namaDsn"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/kotak2"
                android:hint="Masukkan Nama Dosen"
                android:inputType="text"
                android:paddingStart="14dp"
                android:textSize="16sp"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloo2_semibold"
                android:text="NIP"
                android:layout_marginTop="90dp"
                android:layout_marginHorizontal="20dp"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText

                android:id="@+id/edt_nidn"
                android:id="@+id/edt_nipDsn"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/kotak2"
                android:layout_marginTop="120dp"
                android:layout_marginHorizontal="20dp"
                android:hint="Masukkan NIP"
                android:inputType="text"
                android:paddingStart="14dp"
                android:textSize="16sp"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloo2_semibold"
                android:text="E-Mail"
                android:layout_marginTop="175dp"
                android:layout_marginHorizontal="20dp"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edt_emailDsn"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/kotak2"
                android:layout_marginTop="210dp"
                android:layout_marginHorizontal="20dp"
                android:hint="Masukkan E-Mail"
                android:inputType="text"
                android:paddingStart="14dp"
                android:textSize="16sp"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloo2_semibold"
                android:text="Ho. Hp"
                android:layout_marginTop="260dp"
                android:layout_marginHorizontal="20dp"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/noHandp_Dsn"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="290dp"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/kotak2"
                android:hint="Masukkan No.HP"
                android:inputType="text"
                android:paddingStart="14dp"
                android:textSize="16sp"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloo2_semibold"
                android:text="Tempat, Tanggal Lahir"
                android:layout_marginTop="340dp"
                android:layout_marginHorizontal="20dp"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edt_ttl"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/kotak2"
                android:layout_marginTop="370dp"
                android:layout_marginHorizontal="20dp"
                android:hint="Masukkan TTL"
                android:inputType="text"
                android:paddingStart="14dp"
                android:textSize="16sp"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloo2_semibold"
                android:text="Password"
                android:layout_marginTop="430dp"
                android:layout_marginHorizontal="20dp"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxStrokeColor="@color/black"
                app:boxStrokeWidth="0.8dp"
                android:layout_marginTop="450dp"
                app:passwordToggleEnabled="true">
                <EditText
                    android:id="@+id/Password_Dsn"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="370dp"
                    android:layout_marginHorizontal="20dp"
                    android:inputType="textPassword"
                    android:paddingStart="14dp"
                    android:autofillHints="Password"
                    android:textSize="18sp"
                    tools:ignore="RtlSymmetry"
                    android:layout_marginBottom="20dp"
                    android:importantForAccessibility="no"/>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloo2_semibold"
                android:text="upload Foto"
                android:layout_marginTop="520dp"
                android:layout_marginHorizontal="20dp"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/img_dosen"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="550dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/add_image" />
            <Button
                android:id="@+id/img_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="upload image"
                android:layout_marginTop="650dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center_horizontal"/>

        </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:background="@drawable/button"
            android:backgroundTint="@color/color_button"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"/>

    </LinearLayout>

</ScrollView>