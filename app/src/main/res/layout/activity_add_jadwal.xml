<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FormAbsensiActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarStaf"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#F9F6E0">

            <ImageView
                android:id="@+id/imgBack2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="100dp"
                android:paddingTop="5dp"
                android:text="Jadwal Mata Kuliah"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20sp" />
        </androidx.appcompat.widget.Toolbar>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            app:layout_constraintTop_toTopOf="parent"
            android:backgroundTint="@color/white">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/baloo2_semibold"
                android:text="Nama Hari"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edNamaHari"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/kotak2"
                android:layout_marginTop="40dp"
                android:layout_marginHorizontal="20dp"
                android:hint="Senin"
                android:inputType="text"
                android:paddingStart="14dp"
                android:textSize="16sp"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloo2_semibold"
                android:text="Mata Kuliah"
                android:layout_marginTop="90dp"
                android:layout_marginHorizontal="20dp"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edMatkul"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/kotak2"
                android:layout_marginTop="120dp"
                android:layout_marginHorizontal="20dp"
                android:hint="PPB II"
                android:inputType="text"
                android:paddingStart="14dp"
                android:textSize="16sp"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="175dp"
                android:fontFamily="@font/baloo2_semibold"
                android:text="Nama Dosen"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/adnameDosenJdwl"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="210dp"
                android:background="@drawable/kotak2"
                android:hint="Supriadi, S.Kom, M.Kom."
                android:inputType="text"
                android:paddingStart="14dp"
                android:textSize="16sp"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="265dp"
                android:fontFamily="@font/baloo2_semibold"
                android:text="Jam Mata Kuliah"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edJamMatkul"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="300dp"
                android:background="@drawable/kotak2"
                android:hint="08.00-09.20"
                android:inputType="text"
                android:paddingStart="14dp"
                android:textSize="16sp"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="355dp"
                android:fontFamily="@font/baloo2_semibold"
                android:text="Ruang Kelas"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edKelas"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="390dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/kotak2"
                android:hint="D3.05"
                android:inputType="text"
                android:paddingStart="14dp"
                android:textSize="16sp"
                tools:ignore="RtlSymmetry" />

        </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnJdwl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TAMBAH"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:background="@drawable/button"
            android:backgroundTint="@color/color_button"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"/>

    </LinearLayout>


</ScrollView>