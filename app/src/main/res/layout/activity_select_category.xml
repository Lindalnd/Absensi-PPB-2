<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectCategory"
    android:background="@drawable/gradient">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login Sebagai : "
        app:layout_constraintBottom_toTopOf="@+id/btn_categoryMhs"
        android:gravity="center_horizontal"
        android:layout_marginBottom="30dp"
        android:textSize="20sp"
        android:fontFamily="@font/baloo2_semibold"
        android:textColor="@color/black"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_categoryMhs"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/button"
        android:backgroundTint="@color/color_button"
        android:text="Mahasiswa"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginHorizontal="30dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_categoryDsn"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/button"
        android:backgroundTint="@color/color_button"
        android:text="Dosen"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_categoryMhs"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="30dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>